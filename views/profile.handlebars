<body>
  <main>
    <div class="profile">
      <div class="container">
        <div class="row">
          <div class="col">
            <h2>Welcome, {{first_name}}!</h2>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-8 book-list">
            <h3>Your Books</h3>
          </div>
          <div class="col-sm-4">
                <a class="btn btn-login" href="/books">Add a New Book</a>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-4 book-list">
          {{#if books.length}}
              
            {{#each books as |book|}}
            <h4><a href="/book/{{book.id}}">{{book.title}}</a></h4>
            <img src="./img/book.png" alt="its a book"/>
            <p>Well lets put in a book review</p>
            <button class="btn btn-login" data-id="{{book.id}}">DELETE</button>
            {{/each}}
          </div>
          {{/if}}
        </div>         
      </div>          
    </div>
  </main>
</body>


 <script src="./js/profile.js"></script>